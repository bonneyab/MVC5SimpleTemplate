@model SiteServices.ViewModels.DeploymentsViewModel

@{
    ViewBag.Title = "Home Page";
}

<h1>Deployment Manager!</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>
                Available Deployments <small><a href="@Url.Action("Create", "Deployment")">New Deployment</a></small>
        </h2>
    </div>
    <div class="panel-body">
        <div class="list-group">
            @foreach (var deployment in Model.Deployments)
            {
                <a href="@Url.Action("Details", "Deployment", new { deploymentId = deployment.DeploymentId })" class="list-group-item">
                    <h4 class="list-group-item-heading">@deployment.Name</h4>
                    <p class="list-group-item-text">@deployment.Description</p>
                </a>
            }
        </div>
    </div>
</div>
